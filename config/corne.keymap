#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
//      -----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//      | TAB           | B             | W             | F             | P             | .             | ||||||||||||| | ;             | L             | U             | Q             | J             | BKSP          |
//      | SHFT          | A             | R             | S             | T             | G             | ||||||||||||| | M             | N             | E             | I             | O             | '             |
//      | CTRL          | ,             | X             | C             | V             | D             | ||||||||||||| | /             | H             | Z             | Y             | K             | ESC           |
//                                                      | GUI           | LWR           | SPC           | ||||||||||||| | ENT           | RSE           | ALT           |
                        bindings = <
          &kp TAB         &kp B           &kp W           &kp F           &kp P           &kp DOT                         &kp SEMI        &kp L           &kp U           &kp Q           &kp J           &kp BSPC
          &kp LSHFT       &kp A           &kp R           &kp S           &kp T           &kp G                           &kp M           &kp N           &kp E           &kp I           &kp O           &kp SQT
          &kp LCTRL       &kp COMMA       &kp X           &kp C           &kp V           &kp D                           &kp FSLH        &kp H           &kp Z           &kp Y           &kp K           &kp ESC
                                                          &kp LGUI        &mo 1           &kp SPACE                       &kp RET         &mo 2           &kp RALT
                        >;                                                                                                                                              
                };

                lower_layer {
//      -----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//      | TAB           | 1             | 2             | 3             | 4             | 5             | ||||||||||||| | 6             | 7             | 8             | 9             | 0             | BKSP          |
//      | BTCLR         | BT1           | BT2           | BT3           | BT4           | BT5           | ||||||||||||| | LFT           | DWN           | UP            | RGT           |               |               |
//      | CTRL          |               |               |               |               |               | ||||||||||||| |               |               |               |               |               |               |
//                                                      | GUI           |               | SPC           | ||||||||||||| | ENT           |               | ALT           |
                        bindings = <
          &kp TAB         &kp N1          &kp N2          &kp N3          &kp N4          &kp N5                          &kp N6          &kp N7          &kp N8          &kp N9          &kp N0          &kp BSPC
          &bt BT_CLR      &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4                    &kp LEFT        &kp DOWN        &kp UP          &kp RIGHT       &trans          &trans
          &kp LCTRL       &trans          &trans          &trans          &trans          &trans                          &trans          &trans          &trans          &trans          &trans          &trans
                          	                          &kp LGUI        &trans          &kp SPACE                       &kp RET         &trans          &kp RALT
                        >;
                };

                raise_layer {
//      -----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//      | TAB           | !             | @             | #             | $             | %             | ||||||||||||| | ^             | &             | *             | (             | )             | BKSP          |
//      | SHFT          |               |               |               |               |               | ||||||||||||| | -             | =             | [             | ]             | \             | `             |
//      | CTRL          |               |               |               |               |               | ||||||||||||| | _             | +             | {             | }             | "|"           | ~             |
//                                                      | GUI           |               | SPC           | ||||||||||||| | ENT           |               | ALT           |
                        bindings = <
          &kp TAB         &kp EXCL        &kp AT          &kp HASH        &kp DLLR        &kp PRCNT                       &kp CARET       &kp AMPS        &kp KP_MULTIPLY &kp LPAR        &kp RPAR        &kp BSPC
          &kp LSHFT       &trans          &trans          &trans          &trans          &trans                          &kp MINUS       &kp EQUAL       &kp LBKT        &kp RBKT        &kp BSLH        &kp GRAVE
          &kp LSHFT       &trans          &trans          &trans          &trans          &trans                          &kp UNDER       &kp PLUS        &kp LBRC        &kp RBRC        &kp PIPE        &kp TILDE
                    	                                  &kp LGUI        &trans          &kp SPACE                       &kp RET         &trans          &kp RALT
                        >;
                };
        };
};
